<Window
    x:Class="WpfDependencyInjection.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:WpfDependencyInjection.ViewModels"
    xmlns:views="clr-namespace:WpfDependencyInjection.Views"
    Title="WpfDependencyInjection"
    Width="400"
    Height="300"
    d:DataContext="{d:DesignInstance Type=viewmodels:MainWindowViewModel}"
    views:ViewModelLocator.AutoWireViewModel="True"
    FontSize="18"
    mc:Ignorable="d">

    <StackPanel Margin="10" HorizontalAlignment="Center">
        <Button Command="{Binding GetDataCommand}" Content="Get Data" />

        <TextBlock Margin="10" Text="{Binding Message}" />

        <Button Click="OpenChildForm_Click" Content="Open Child Form" />


    </StackPanel>
</Window>
