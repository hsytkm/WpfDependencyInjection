<UserControl
    x:Class="WpfDependencyInjection.Views.ParentPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfDependencyInjection.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:WpfDependencyInjection.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:ParentPageViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <DockPanel Background="LightBlue">
        <TextBlock DockPanel.Dock="Top" Text="Parent" />
        <TextBlock DockPanel.Dock="Top" Text="{Binding Index.Index, StringFormat='V={0}', RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}" />
        <TextBlock DockPanel.Dock="Top" Text="{Binding Index.Index, StringFormat='VM={0}'}" />
        <TextBlock DockPanel.Dock="Top" Text="{Binding Counter}" />

        <ContentControl x:Name="content" Margin="10" />
    </DockPanel>
</UserControl>
